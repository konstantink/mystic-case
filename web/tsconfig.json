{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        // "paths": {
        //   "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"]
        // },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "classnameTransform": "asis",
            }
        ],
        "paths": {
            "@mysticcase/services/auth": ["src/services/auth/index.ts"],
            "@mysticcase/storage-helper": ["src/services/storage/index.ts"],
            "@mysticcase/ui": ["src/components/ui"],
            "@mysticcase/ui/*": ["src/components/ui/*"],
            "@mysticcase/*": ["src/*"],
            "@styles": ["../assets/public/assets/styles"],
        }
    },
    // "files": ["src/cssmodule.d.ts"],
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "vite.config.js",
        "src/cssmodule.d.ts",
    ]
}
